<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="principal" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectogeslex.MenuPrincipal2Controller">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnBuscarClientes" contentDisplay="TOP" mnemonicParsing="false" onAction="#verActores" prefHeight="25.0" prefWidth="166.0">
               <graphic>
                  <ImageView fx:id="imagenPersonas" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../recursos/cliente.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnVerVehiculos" mnemonicParsing="false" onAction="#verVehiculos">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../recursos/coche.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnVerExp" mnemonicParsing="false" onAction="#VerExp" prefHeight="25.0" prefWidth="166.0">
               <graphic>
                  <ImageView fx:id="imagenExpedientes" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../recursos/document.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnVerConfiguracion" mnemonicParsing="false" onAction="#verConfiguracion">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../recursos/configuracion.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </left>
</BorderPane>
