<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="principal" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectogeslex.MenuPrincipal2Controller">
   <left>
      <VBox style="-fx-background-color: #4F5F8F;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnBuscarClientes" contentDisplay="TOP" graphicTextGap="0.0" mnemonicParsing="false" onAction="#verActores" text="Personas">
               <graphic>
                  <ImageView fx:id="imagenPersonas" fitHeight="140.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../recursos/cliente.png" />
                     </image>
                  </ImageView>
               </graphic>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnVerVehiculos" contentDisplay="TOP" graphicTextGap="0.0" mnemonicParsing="false" onAction="#verVehiculos" text="Vehiculos">
               <graphic>
                  <ImageView fitHeight="140.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../recursos/coche.png" />
                     </image>
                  </ImageView>
               </graphic>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnVerExp" contentDisplay="TOP" graphicTextGap="0.0" mnemonicParsing="false" onAction="#verExp" text="Expedientes">
               <graphic>
                  <ImageView fx:id="imagenExpedientes" fitHeight="140.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../recursos/document.png" />
                     </image>
                  </ImageView>
               </graphic>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnVerConfiguracion" contentDisplay="TOP" graphicTextGap="0.0" mnemonicParsing="false" onAction="#verConfiguracion" text="Configuración">
               <graphic>
                  <ImageView fitHeight="140.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../recursos/configuracion.png" />
                     </image>
                  </ImageView>
               </graphic>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <VBox alignment="CENTER" style="-fx-background-color: #4F5F8F;" BorderPane.alignment="CENTER">
         <children>
            <Text fill="WHITE" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Bienvenido a Geslex">
               <font>
                  <Font name="System Bold Italic" size="36.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Text>
            <Text fx:id="labelUser" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="user">
               <font>
                  <Font name="System Bold Italic" size="36.0" />
               </font>
            </Text>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="¿Que gestión desea realizar?">
               <font>
                  <Font name="System Italic" size="36.0" />
               </font>
            </Text>
            <ImageView fitHeight="200.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../recursos/logo.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </center>
</BorderPane>
